{
  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.fontSize": 18,
  "editor.stickyScroll.enabled": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.fontFamily": "'FiraMono Nerd Font', 'Fira Code', 'Droid Sans Mono', monospace",
  "window.titleBarStyle": "custom",

  // Workbench
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.tabSizingFixedMaxWidth": 200,

  // Terminal
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "'FiraMono Nerd Font', monospace",

  // Git
  "git.autofetch": true,
  "git.confirmSync": true,
  "git.postCommitCommand": "push",

  // Language Specific Settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  "[lua]": {
    "editor.quickSuggestions": {
      "comments": "inline",
      "other": "on",
      "strings": "on"
    },
    "editor.semanticHighlighting.enabled": true
  },

  // VSCodeVim Settings
  "vim.camelCaseMotion.enable": true,
  // "vim.insertModeKeyBindings": [
  //   {
  //     "before": ["j", "j"],
  //     "after": ["<Esc>"]
  //   }
  // ],
  // Removed because capslock remapped to esc

  // Other Extensions
  "vsicons.dontShowNewVersionMessage": true,
  "markdown.extension.orderedList.autoRenumber": true,
  "markdown.extension.tableFormatter.enabled": true,
  "markdown.extension.toc.updateOnSave": true,
  "markdown.preview.doubleClickToSwitchToEditor": true,
  "markdownlint.config": {
    "default": true,
    "MD029": {
      "style": "ordered"
    }
  },

  // Jupyter Notebook and python
  "python.createEnvironment.trigger": "off",
  "python.analysis.nodeExecutable": "~/.nvm/versions/node/v20.13.1/bin/node",
  "python.defaultInterpreterPath": "/usr/bin/python",
  "jupyter.askForKernelRestart": false,
  "notebook.output.wordWrap": true,
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true
  },

  // Gitpod
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
  "remote.SSH.remotePlatform": {
    "*.gitpod.io": "linux"
  },
  "redhat.telemetry.enabled": false,
  "gitlens.launchpad.indicator.enabled": false,
  "settingsSync.ignoredSettings": ["-python.defaultInterpreterPath"]
}
